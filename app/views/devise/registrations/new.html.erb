<h2><%= i18n_viewer('sign_up') %></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email, i18n_viewer('email') %><br />
  <%= f.email_field :email %></div>

  <div><%= f.label :password, i18n_viewer('password') %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation, i18n_viewer('password_confirmation') %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit i18n_viewer('sign_up') %></div>
<% end %>

<%= render "links" %>
