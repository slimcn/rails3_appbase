<h2><%= i18n_viewer('sign_in') %></h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.label :email, i18n_viewer('email') %><br />
  <%= f.email_field :email %></div>

  <div><%= f.label :password, i18n_viewer('password') %><br />
  <%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me,  i18n_viewer('remember_me') %></div>
  <% end -%>

  <div><%= f.submit i18n_viewer('sign_in') %></div>
<% end %>

<%= render "links" %>
